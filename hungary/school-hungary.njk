---
layout: layout-fullwidth.njk
country: hungary
pagination:
    data: schools
    size: 1
    alias: school
permalink: "/hungary/schools/{{ school.name | slug }}/"
---

<div class="story-page">
  <div class="story__header">
    <p>
      <a href="/hungary/schools/" class="small-link back-link">Vissza az iskolákhoz</a>
    </p>
    <h1>{{ school.name }}</h1>
  </div>
  <div class="story__meta">
    <ul class="list-unstyled meta-icon-list">
      <li>
        <i class="replace-with-icon replace-with-icon--school">Iskola:</i>
        {{ school.name }}
      </li>
      <li>
        <i class="replace-with-icon replace-with-icon--country">Ország:</i>{{ school.country }}
      </li>
    </ul>
  </div>
  <div class="story__description">
    <h4>Az Iskoláról</h4>
    {% if school.logoUrl %}
      <img src="{{ school.logoUrl }} " alt="school logo"/>
    {% endif %}
    <p>{{ school.description | safe }}</p>
    {% if school.latitude | length %}
      <h4>Hol található az iskola?</h4>
      {% include "../_includes/school-map.njk" %}
    {% endif %}
  </div>
  <div class="story__content">
    {% if stories | schoolFilter(school.name) | length %}
      <h3>Történetek ebből az iskolából</h3>
      <div class="flex-grid">
        {% for storyrow in stories | schoolFilter(school.name) | batch(3) %}

          {% for story in storyrow %}
            <div class="flex-grid__item card card--story">
              <div class="card-image-background" style="background-image: url('{{ story.mainImageUrl }}');"></div>
              <div class="card-body">
                <p class="card-text">
                  <a href="/hungary/{{ story.name | slug }}" rel="noopener">{{ story.name }}</a>
                </p>
              </div>
            </div>
          {% endfor %}

        {% endfor %}
      {% endif %}
    </div>

  </div>

</div>

</div>